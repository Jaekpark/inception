version: "3.9"
services:
  mariadb:
    build:
      context: ./requirements/mariadb
    image: mariadb:inc
    container_name: mariadb
    environment:
      MYSQL_ROOT_PASSWORD: jaekpark
      MYSQL_DATABASE: wordpress
      MYSQL_USER: jakepark
      MYSQL_PASSWORD: jaekpark
    restart: always

  wordpress:
    build:
      context: ./requirements/wordpress
    image: wordpress:inc
    container_name: wordpress
    depends_on:
      - mariadb
    environment:
      WORDPRESS_DB_HOST: mariadb:3306
      WORDPRESS_DB_USER: jaekpark
      WORDPRESS_DB_PASSWORD: jaekpark
      WORDPRESS_DB_NAME: wordpress
    restart: always

  nginx:
    build:
      context: ./requirements/nginx
    image: nginx:inc
    container_name: nginx
    depends_on:
      - wordpress
      - mariadb
    ports:
      - 80:80
    restart: always
